<odoo>
    <data noupdate="1">
        <!-- FastAGI Settings -->
        <record id="fagi_enabled" model="asterisk_plus.agent_options">
            <field name="key">fagi_enabled</field>
            <field name="value">yes</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="fagi_listen" model="asterisk_plus.agent_options">
            <field name="key">fagi_listen</field>
            <field name="value">0.0.0.0</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="fagi_port" model="asterisk_plus.agent_options">
            <field name="key">fagi_port</field>
            <field name="value">44574</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>

        <!-- Security Settings -->
        <record id="security_enabled" model="asterisk_plus.agent_options">
            <field name="key">security_enabled</field>
            <field name="value">no</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="security_banned_timeout" model="asterisk_plus.agent_options">
            <field name="key">security_banned_timeout</field>
            <field name="value">86400</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="security_authenticated_timeout" model="asterisk_plus.agent_options">
            <field name="key">security_authenticated_timeout</field>
            <field name="value">604800</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="security_expire_short_timeout" model="asterisk_plus.agent_options">
            <field name="key">security_expire_short_timeout</field>
            <field name="value">30</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="security_expire_long_timeout" model="asterisk_plus.agent_options">
            <field name="key">security_expire_long_timeout</field>
            <field name="value">86400</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="security_ports_tcp" model="asterisk_plus.agent_options">
            <field name="key">security_ports_tcp</field>
            <field name="value">5060,5061,5062,65060,65061,8088,8089,48088,48089</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="security_ports_udp" model="asterisk_plus.agent_options">
            <field name="key">security_ports_udp</field>
            <field name="value">5060,5061,5062,65060,65061,65062</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        <record id="security_iptables" model="asterisk_plus.agent_options">
            <field name="key">security_iptables</field>
            <field name="value">iptables</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>
        
        <record id="asterisk_sounds_dir" model="asterisk_plus.agent_options">
            <field name="key">asterisk_sounds_dir</field>
            <field name="value">/var/lib/asterisk/sounds/</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>

        <record id="asterisk_monitor_dir" model="asterisk_plus.agent_options">
            <field name="key">asterisk_monitor_dir</field>
            <field name="value">/var/spool/asterisk/monitor/</field>
            <field name="server" ref="asterisk_plus.default_server"/>
        </record>        

    </data>
</odoo>
